{
  "name": "@zooroyal/vertical-components",
  "version": "0.0.1",
  "private": true,
  "description": "Vertical Web Components",
  "keywords": [
    "vertical",
    "webcomponents"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:mrmoree/VerticalComponents2.git"
  },
  "bugs": {
    "url": "https://github.com/ZooRoyal/VerticalComponents2/issues"
  },
  "homepage": "https://github.com/ZooRoyal/VerticalComponents2#README",
  "author": "Oliver Kierepka <o.kierepka@zooroyal.de> (https://zooroyal.de)",
  "license": "MIT",
  "devDependencies": {
    "@zooroyal/vert-dev-toolbox": "^0.0.10"
  },
  "scripts": {
    "del-dist": "lerna exec --parallel -- del-cli dist",
    "prebuild": "yarn del-dist",
    "bootstrap": "lerna bootstrap",
    "lint:js": "eslint --config ./elements/vert-dev-toolbox/eslintrc.js --ignore-path elements/vert-dev-toolbox/.eslintignore --cache ./*/src",
    "lint:ts": "eslint --config ./elements/vert-dev-toolbox/eslintrc.js --ignore-path elements/vert-dev-toolbox/.eslintignore --cache \"elements/**/*.ts\" \"test/**/*.ts\" \"scripts/**/*.ts\"",
    "lint": "npm-run-all --parallel lint:*",
    "fix:js": "eslint --config ./elements/vert-dev-toolbox/eslintrc.js --ignore-path elements/vert-dev-toolbox/.eslintignore --cache --fix ./*/src",
    "fix:ts": "eslint --config ./elements/vert-dev-toolbox/eslintrc.js --ignore-path elements/vert-dev-toolbox/.eslintignore --cache --fix ./*/src/",
    "fix": "npm-run-all --parallel fix:*",
    "dev": "concurrently \"yarn watch\" \"lerna run dev --stream\"",
    "build:babel": "lerna exec --ignore @zooroyal/vert-dev-* --parallel -- babel src -d dist --config-file ../../.babelrc --source-maps",
    "build:webpack": "lerna run build:webpack",
    "build": "yarn build:babel && yarn build:webpack",
    "build:esmodules": "tsc --project ./elements/vert-dev-toolbox/tsconfig.json --module esnext --importHelpers",
    "postinstall": "yarn bootstrap",
    "release": "yarn build && lerna publish",
    "watch": "yarn build:babel -w",
    "predeploy": "yarn build",
    "pretest": "yarn run lint",
    "test": "yarn run jest",
    "test:watch": "yarn run jest --watch"
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "elements/*",
      "themes/*"
    ],
    "nohoist": []
  },
  "dependencies": {
    "yarn-run-all": "^3.1.1"
  }
}
