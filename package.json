{
  "name": "@zooroyal/VerticalComponents",
  "version": "0.0.1",
  "pritave": true,
  "description": "Vertical Web Components",
  "keywords": [
    "vertical",
    "webcomponents"
  ],
  "scripts": {
    "compile": "lerna run compile",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "update-version": "lerna publish --skip-git --skip-npm --force-publish '*'",
    "check-packages": "yarn clean && yarn compile && yarn test && yarn lint",
    "publish-packages": "./scripts/publish"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mrmoree/VerticalComponents2.git"
  },
  "bugs": {
    "url": "https://github.com/ZooRoyal/VerticalComponents2/issues"
  },
  "homepage": "https://github.com/ZooRoyal/VerticalComponents2#README",
  "author": "Oliver Kierepka <o.kierepka@zooroyal.de> (https://zooroyal.de)",
  "license": "MIT",
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.1",
    "lerna": "^3.4.3"
  },
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": {
    "packages": [
      "elements/*",
      "themes/*"
    ],
    "nohoist": []
  }
}
