{
  "packages": [
    "elements/*",
    "themes/*"
  ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "workspaces": [
    "elements/*",
    "themes/*"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "yes": true,
      "ignoreChanges": [
        "ignored-file",
        "*.md"
      ]
    }
  }
}
